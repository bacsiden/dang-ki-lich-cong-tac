@model Alabama.TongHopDetail
           @{
               
               var lstDiaDiem = Alabama.DB.Entities.Location.ToList();
           }
<script type="text/javascript">
    $(document).ready(function () {
        $('.timepicker-default').timepicker({
            showMeridian: false,
            defaultTime: 'value'
        });
    });
</script>
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
        ×</button>
    <h3 id="myModalLabel1">
        Sửa tổng hợp chi tiết
    </h3>
</div>
@using (Html.BeginForm("EditDetail", "TongHopLichCongTac", new { url = ViewBag.Url }))
{
    <div class="modal-body Content-EditDetail" id="Content-EditDetail">
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.TongHopID)
        @Html.HiddenFor(model => model.Code)
        <div class="editor-label">
            Nội dung
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.NoiDung, new { rows = "3", Class = "input-xxlarge" })
            @Html.ValidationMessageFor(model => model.NoiDung)
        </div>
        <div class="editor-label">
            Giờ
        </div>
        <div class="editor-field">
            <div class="input-append bootstrap-timepicker-component">
                <input class="timepicker-default input-small" type="text" value="@Model.Time" name="Time"/>
                <span class="add-on"><i class="icon-time"></i></span>
            </div>
            @Html.ValidationMessageFor(model => model.Time)
        </div>
        <div class="editor-label">
            Người thực hiện
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.NguoiThucHien, new { rows = "3", Class = "input-xxlarge" })
            @Html.ValidationMessageFor(model => model.NguoiThucHien)
        </div>
        <div class="editor-label">
            Người thực hiện
        </div>
        <div class="editor-field">
            <select  name="LocationID">
                <option value="0">--</option>
                @foreach (var itemdd in lstDiaDiem)
                {
                    var selected = "";
                    if (Model.Location != null && itemdd.ID == Model.Location.ID)
                    {
                        selected = "selected='selected'";
                    }
                    <option value="@itemdd.ID" @selected>@itemdd.Title</option>
                }
            </select>
            @Html.ValidationMessageFor(model => model.LocationID)
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="submit">
            Lưu lại</button>
        <button class="btn" data-dismiss="modal" aria-hidden="true">
            Hủy</button>
    </div>
}