@model Alabama.TongHopDetail
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
        ×</button>
    <h3 id="myModalLabel1">
        Sửa tổng hợp chi tiết</h3>
</div>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
                <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Ajax.BeginForm("EditDetail", "TongHopLichCongTac", new AjaxOptions { UpdateTargetId = "Content-EditDetail" }))
{
    <div class="modal-body Content-EditDetail" id="Content-EditDetail">
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.TongHopID)
        @Html.HiddenFor(model => model.Code)
        <div class="editor-label">
            @Html.LabelFor(model => model.NoiDung)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NoiDung)
            @Html.ValidationMessageFor(model => model.NoiDung)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Time)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Time)
            @Html.ValidationMessageFor(model => model.Time)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.NguoiThucHien)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NguoiThucHien)
            @Html.ValidationMessageFor(model => model.NguoiThucHien)
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">
            Hủy</button>
        <button class="btn btn-primary" type="submit">
            Lưu lại</button>
    </div>
}