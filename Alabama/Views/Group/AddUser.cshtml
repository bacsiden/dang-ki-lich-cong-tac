@model Alabama.User
<h3>
    Thêm người dùng vào nhóm <a href="/Group/UsersInGroup/@ViewBag.GroupID">@ViewBag.GroupName</a></h3>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@Html.ValidationSummary(true, "Thêm người dùng vào nhóm không thành công")
@using (Html.BeginForm("DoAddUser", "Group", new { groupID = ViewBag.GroupID }))
{
    <div>
        <div class="control-group">
            <label class="control-label">
                Tên người dùng (Tên đăng nhập)</label>
            <div class="controls">
                <select data-placeholder="Select UserName" name="UserName" class="chosen-with-diselect input-xlarge">
                    @Html.Raw(ViewBag.listUser)
                </select>
            </div>
            <input type="submit" value="Lưu lại" class="btn btn-primary" />
            <button type="button" class="btn" onclick="javascript:window.history.go(-1);">
                Hủy</button>
        </div>
    </div>
}