@model IEnumerable<Alabama.Group>
<div class="row-fluid">
    <div class="span12">
        <div class="box">
            <div class="box-title">
                <h3>
                    <i class="icon-table"></i>Danh sách nhóm người dùng</h3>
            </div>
            <div class="box-content">
                <p style="margin-left: 7px;">
                    @Html.ActionLink("Thêm nhóm", "Create", null, new { @class = "btn btn-primary" })
                </p>
                <table class="table">
                    <thead>
                        <tr class="table-flag-blue">
                            <th>
                                Tên nhóm
                            </th>
                            <th>
                                Vai trò
                            </th>
                            <th>
                                
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.ActionLink(item.Title, "Edit", new { id = item.ID }, null)
                                </td>
                                <td>
                                    @foreach (var role in item.Role1)
                                    {
                                        @role.Name <br />
                                    }
                                </td>
                                <td>
                                    @Html.ActionLink("Thêm người dùng vào nhóm", "UsersInGroup", new { id = item.ID })
                                </td>
                                <td>
                                    @Html.ActionLink("Phân quyền", "Role", new { id = item.ID })
                                </td>
                                @*<td>
                                    @Html.ActionLink("Phân menu", "Menu", new { id = item.ID })
                                </td>*@
                                <td>
                                    @Html.ActionLink("Xóa", "Delete", new { id = item.ID }, new { @class = "confirmDelete" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                
            </div>
        </div>
    </div>
</div>
