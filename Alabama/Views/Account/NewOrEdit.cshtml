@model Alabama.User
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="row-fluid">
    <div class="span12">
        <div class="box">
            <div class="box-title">
                <h3>
                    <i class="icon-table"></i>@ViewBag.Title</h3>
            </div>
            <div class="box-content">
                @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.ID)
                    @Html.HiddenFor(model => model.AspnetUserID)
                    <div class="control-group">
                        <label class="control-label" for="UserName">
                            Tên đăng nhập</label>
                        <div class="controls">
                            <div class="span12">
                                @Html.TextBoxFor(model => model.UserName)
                                @Html.ValidationMessageFor(model => model.UserName)
                            </div>
                        </div>
                    </div>
                     <div class="control-group">
                        <label class="control-label" for="Name">
                            Mật khẩu</label>
                        <div class="controls">
                            <div class="span12">
                                <input type="text" name="password" value=" " />
                            </div>
                        </div>
                    </div>    
                    <div class="control-group">
                        <label class="control-label" for="Name">
                            Họ và tên</label>
                        <div class="controls">
                            <div class="span12">
                                @Html.TextBoxFor(model => model.Name)
                                @Html.ValidationMessageFor(model => model.Name)
                            </div>
                        </div>
                    </div>                    
                    <div class="control-group">
                        <label class="control-label" for="PhoneNumber">
                            Điện thoại</label>
                        <div class="controls">
                            <div class="span12">
                                @Html.TextBoxFor(model => model.PhoneNumber)
                                @Html.ValidationMessageFor(model => model.PhoneNumber)
                            </div>
                        </div>
                    </div> 
                    <div class="control-group">
                        <label class="control-label" for="Email">
                            @Html.LabelFor(model => model.Email)</label>
                        <div class="controls">
                            <div class="span12">
                                @Html.TextBoxFor(model => model.Email)
                                @Html.ValidationMessageFor(model => model.Email)
                            </div>
                        </div>
                    </div> 
                    <div class="control-group">
                        <label class="control-label" for="Sex">
                            Giới tính</label>
                        <div class="controls">
                            <div class="span12">
                                @Html.TextBoxFor(model => model.Sex)
                                @Html.ValidationMessageFor(model => model.Sex)
                            </div>
                        </div>
                    </div> 
                    <div class="control-group">
                        <label class="control-label" for="Birthday">
                            Ngày sinh</label>
                        <div class="controls">
                            <div class="span12">
                                @Html.TextBoxFor(model => model.Birthday, new { @class = "date-picker" })
                                @Html.ValidationMessageFor(model => model.Birthday)
                            </div>
                        </div>
                    </div> 
                    <div class="control-group">
                        <label class="control-label" for="Address">
                            Địa chỉ</label>
                        <div class="controls">
                            <div class="span12">
                                @Html.TextBoxFor(model => model.Address)
                                @Html.ValidationMessageFor(model => model.Address)
                            </div>
                        </div>
                    </div> 
                    <div class="control-group">
                        <label class="control-label" for="Locked">
                            Khóa</label>
                        <div class="controls">
                            <div class="span12">
                                @Html.CheckBoxFor(model => model.Locked)
                                @Html.ValidationMessageFor(model => model.Locked)
                            </div>
                        </div>
                    </div> 
                    <div class="control-group">
                        <label class="control-label" for="Avata">
                            Ảnh đại diện</label>
                        <div class="controls">
                            <div class="span12">
                                @Html.TextBoxFor(model => model.Avata)
                                @Html.ValidationMessageFor(model => model.Avata)
                            </div>
                        </div>
                    </div> 
                    <div class="control-group">
                        <label class="control-label" for="Avata">
                            Đơn vị</label>
                        <div class="controls">
                            <div class="span12">
                                <select data-placeholder="Select đơn vị" name="DonViID" class="chosen-with-diselect input-xlarge">
                                    @Html.Raw(ViewBag.DonVi)
                                </select>
                                @Html.ValidationMessageFor(model => model.DonViID)
                            </div>
                        </div>
                    </div> 
                    <div class="form-actions">
                        <input type="submit" value="Lưu lại" class="btn btn-primary" />
                        @Html.ActionLink("Quay lại", "Index", null, new { Class = "btn" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>
